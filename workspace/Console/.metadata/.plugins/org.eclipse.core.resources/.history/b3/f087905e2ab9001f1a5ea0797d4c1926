#include "main.h"
#include "usb_switch.h"
#include <stdio.h>

uint8_t USB_Switch1;
uint8_t USB_Switch2;

void Read_Usb_Switch(void)
{
	USB_Switch1 = (uint8_t)HAL_GPIO_ReadPin(SEL_DP1_GPIO_Port, SEL_DP1_Pin);
	USB_Switch2 = (uint8_t)HAL_GPIO_ReadPin(SEL_DP2_GPIO_Port, SEL_DP2_Pin);
	printf("> input : USB_Switch1(%d), USB_Switch2(%d) \n",USB_Switch1, USB_Switch2);
}

void Output_Usb_Switch(void)
{
	uint8_t output_Switch1 = 0;
	uint8_t output_Switch2 = 0;

	//select DP1 usb port
	if(USB_Switch1 == 0 && USB_Switch2 == 1)
	{
	    HAL_GPIO_WritePin(USB_SEL_SW1_GPIO_Port, USB_SEL_SW1_Pin, GPIO_PIN_RESET);
	    HAL_GPIO_WritePin(USB_SEL_SW2_GPIO_Port, USB_SEL_SW2_Pin, GPIO_PIN_RESET);
	    printf("* DP1 selected : ");
	}
	//select DP2 usb port
	else if(USB_Switch1 == 1 && USB_Switch2 == 0)
	{
	    HAL_GPIO_WritePin(USB_SEL_SW1_GPIO_Port, USB_SEL_SW1_Pin, GPIO_PIN_SET);
	    HAL_GPIO_WritePin(USB_SEL_SW2_GPIO_Port, USB_SEL_SW2_Pin, GPIO_PIN_SET);
	    printf("* DP2 selected : ");
	}
	//select default DP1 usb port
	else {
	    HAL_GPIO_WritePin(USB_SEL_SW1_GPIO_Port, USB_SEL_SW1_Pin, GPIO_PIN_RESET);
	    HAL_GPIO_WritePin(USB_SEL_SW2_GPIO_Port, USB_SEL_SW2_Pin, GPIO_PIN_RESET);
	}

	printf("> output_Switch1(%d), output_Switch2(%d) \n", output_Switch1, output_Switch2);

}


void USB_Selec_Switch(void)
{
	Read_Usb_Switch();
	Output_Usb_Switch();
}
